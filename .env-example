# GNews API Configuration
GNEWS_API_KEY=your_gnews_api_key_here
GNEWS_CATEGORIES=world,nation,business,technology,science
GNEWS_LANG=en
GNEWS_COUNTRY=us
GNEWS_MAX_PER_PAGE=25
GNEWS_MAX_NEWS_PER_CATEGORY=200

# Database Configuration
DB_HOST=localhost
DB_NAME=news_threads
DB_USER=postgres
DB_PASSWORD=your-db-password-here
DB_PORT=5432

# Azure OpenAI Chat Model Configuration
AOAI_API_VERSION=2024-12-01-preview
AOAI_ENDPOINT=https://your-aoai-resource-name.openai.azure.com/
AOAI_MODEL_NAME=gpt-4.1-nano
AOAI_DEPLOYMENT_NAME=your-deployment-name
AOAI_API_KEY=your-aoai-api-key-here

# Azure OpenAI Embedding Model Configuration
AOAI_EMBEDDING_API_VERSION=2024-02-01
AOAI_EMBEDDING_ENDPOINT=https://your-aoai-resource-name.openai.azure.com/
AOAI_EMBEDDING_MODEL_NAME=text-embedding-3-large
AOAI_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment-name
AOAI_EMBEDDING_API_KEY=your-aoai-embedding-api-key-here

# Similarity Thresholds
COS_SIMILARITY_THRESHOLD=0.75
LLM_SIMILARITY_THRESHOLD=70

# LLM Retry Configuration
LLM_MAX_RETRY_ATTEMPTS=3

# Debug Configuration
DEBUG_MODE=false

# LLM Provider Configuration
# Options: azure, gemini
LLM_PROVIDER=azure

# Gemini Configuration (when LLM_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_CHAT_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
